<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-8 offset-4">Login </h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="Add a catchy title" class="form-control"
                    required>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text" id="password" name="password" placeholder="Add password" class="form-control"
                    required>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>